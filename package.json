{
  "name": "RoomManagementSystem",
  "version": "1.0.0",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "xian-start": "node index.js",
    "xian": "nodemon index.js",
    "migrate": "node migrate.js",
    "create:model": "node create.js model",
    "create:controller": "node create.js controller",
    "frontend": "npm run start --prefix frontend",
    "xianca": "electron .",
    "xian-dev": "concurrently \"npm run xian\" \"npm run frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "xian-build": "electron-builder",
    "xian-run": "concurrently \"nodemon index.js\" \"electron .\"",
    "build": "npm run xian-build",
    "dist": "npm run xian-build -- --publish=never"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "connect-flash": "^0.1.1",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "hbs": "^4.2.0",
    "inquirer": "^9.2.15",
    "mysql2": "^3.9.2",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^38.2.1",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.xianfire.app",
    "productName": "RoomManagementSystem",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  }
}
